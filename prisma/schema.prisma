// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // REMOVA A LINHA "url = ..." DAQUI
}

model Carro {
  id        String   @id @default(uuid())
  modelo    String
  ano       Int
  placa     String?  // Coloquei ? pois era opcional
  kmAtual   Int      @default(0)
  fipeCodigo String? // <--- NOVO CAMPO (Ex: "011135-0")
  manutencoes Manutencao[]
  criadoEm  DateTime @default(now())
}

model Manutencao {
  id          String   @id @default(uuid())
  descricao   String
  km          Int
  custo       Float
  data        DateTime @default(now())
  tipo        String
  quantidade  Float?   // <--- NOVO: Aceita 0.5 (500ml), 1.0, etc.
  carroId     String
  carro       Carro    @relation(fields: [carroId], references: [id])
}